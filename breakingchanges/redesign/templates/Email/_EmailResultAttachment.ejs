<div class="coveo-attachment-container">
    <% if(isMobileDevice() && (Coveo.QueryUtils.hasThumbnail(obj) || hasHtmlVersion)) { %>
        <% if(hasHtmlVersion) { %>
        <%= fromFileTypeToIcon() %>
        <a class="CoveoResultLink"><%= title || clickUri %></a>
        <span class="CoveoQuickview">
            <div class='coveo-icon-for-quickview'>Quickview</div>
        </span>
        <% } else if(Coveo.QueryUtils.hasThumbnail(obj)) { %>
        <%= thumbnail() %>
        <% } %>
    <% } else { %>
        <%= fromFileTypeToIcon() %>
        <a class="CoveoResultLink"><%= title || clickUri %></a>
        <span class="CoveoQuickview">
            <div class='coveo-icon-for-quickview'>Quickview</div>
        </span>
    <% } %>
</div>

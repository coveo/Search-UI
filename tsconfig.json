{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": false,
    "experimentalDecorators": true,
    "outDir": "./bin",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "lib",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "docs/playground/src/**/*.ts"
  ]
}
